<Page x:Class="CourseWork.Pages.UserPart.Orders"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CourseWork.Pages.UserPart"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Orders" Name="OrderWindow">

    <Grid>
        <DataGrid x:Name="OrderTable" Height="300" Margin="75,75,275,75" Width="450" Visibility="{Binding ElementName=OrderWindow, Path=visible}"/>
        <Grid Width="245" Height="300" HorizontalAlignment="Right" Margin="0,75,15,75" Visibility="{Binding ElementName=OrderWindow, Path=visible}"/>
        <TextBlock Text="Немає замовлень" TextWrapping="Wrap" Width="200" Height="40" FontSize="20" TextAlignment="Center" Foreground="{StaticResource VeryLight}">
            <TextBlock.Style>
                <Style>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=OrderWindow, Path=visible}" Value="Visible">
                            <Setter Property="Button.Visibility" Value="Hidden"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
    </Grid>
</Page>
