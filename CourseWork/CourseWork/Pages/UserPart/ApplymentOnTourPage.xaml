<Page x:Class="CourseWork.Pages.UserPart.ApplymentOnTourPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CourseWork.Pages.UserPart"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ApplymentOnTourPage">

    <Grid>
        <DataGrid x:Name="ServicesTable" Height="300" Style="{StaticResource GridStyle}" Margin="50,0,0,0" Width="300" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <DataGrid x:Name="AccomodationTable" Width="300" Height="150" Style="{StaticResource GridStyle}" Margin="0,75,50,0" HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <Button Click="ApplyToTourClick" Content="Придбати" Style="{StaticResource UsualButton}" Margin="0,0,0,20" Height="40" Width="100" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
    </Grid>
</Page>
