    <Grid>
        <DataGrid x:Name="TourTable"    Width="440" Height="400" Style="{StaticResource GridStyle}" Margin="25,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <DataGrid x:Name="TourMealTypeTable" Width="285" Height="300" Style="{StaticResource GridStyle}" Margin="0,0,25,0" VerticalAlignment="Center" HorizontalAlignment="Right"/>
