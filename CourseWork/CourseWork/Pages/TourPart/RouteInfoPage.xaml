<Page x:Class="CourseWork.Pages.TourPart.RouteInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CourseWork.Pages.TourPart"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RouteInfoPage">

    <Grid>
        <DataGrid x:Name="AccomodationTable" Margin="20,20,0,0" Style="{StaticResource GridStyle}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="360" Height="160"/>
        <DataGrid x:Name="MealTypeTable"     Margin="0,20,20,0" Style="{StaticResource GridStyle}" VerticalAlignment="Top" HorizontalAlignment="Right" Width="360" Height="160"/>
        <DataGrid x:Name="ServiceTable"      Margin="20,0,0,40" Style="{StaticResource GridStyle}" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="295" Height="210"/>
        <DataGrid x:Name="TravelWaysTable"   Margin="0,0,255,90" Style="{StaticResource GridStyle}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="210" Height="160"/>
        <DataGrid x:Name="CountyTable"   Margin="0,0,20,90" Style="{StaticResource GridStyle}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="210" Height="160"/>
    </Grid>
</Page>
