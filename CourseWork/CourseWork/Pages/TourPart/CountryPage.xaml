<Page x:Class="CourseWork.Pages.TourPart.CountryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CourseWork.Pages.TourPart"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CountryPage">

    <Grid>
        <DataGrid x:Name="CountiesTable"         Style="{StaticResource GridStyle}" Width="400" Height="300" Margin="40,0,0,0" HorizontalAlignment="Left"  VerticalAlignment="Center"/>
        <DataGrid x:Name="BlockedCountriesTable" Style="{StaticResource GridStyle}" Width="300" Height="300" Margin="0,0,40,0" HorizontalAlignment="Right" VerticalAlignment="Center" SelectionMode="Single" HeadersVisibility="Column"/>
    </Grid>
</Page>
