<Page x:Class="CourseWork.Pages.TourPart.TourPartNav"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CourseWork.Pages.TourPart"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TourPartNav">

    <Grid>
        <Button Click="TourClick"        Content="Тури"         Width="120" Style="{StaticResource UsualButton}" Margin="0,60,0,0"  HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button Click="RouteClick"       Content="Маршрути"     Width="120" Style="{StaticResource UsualButton}" Margin="0,120,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button Click="CitiesClick"      Content="Міста"        Width="120" Style="{StaticResource UsualButton}" Margin="0,180,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button Click="CountriesClick"   Content="Країни"       Width="120" Style="{StaticResource UsualButton}" Margin="0,240,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button Click="EnumerationClick" Content="Перечислення" Width="120" Style="{StaticResource UsualButton}" Margin="0,300,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
    </Grid>
</Page>
