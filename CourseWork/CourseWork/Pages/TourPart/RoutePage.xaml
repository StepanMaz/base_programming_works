<Page x:Class="CourseWork.Pages.TourPart.RoutePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CourseWork.Pages.TourPart"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RoutePage">

    <Grid>
        <DataGrid x:Name="RouteTable" SelectionMode="Single" Width="500" Height="350" Style="{StaticResource GridStyle}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="50,0,0,0"/>
        <Grid Margin="550,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="250" Height="280">
            <Button x:Name="Details" IsEnabled="False" Click="OpenDetails"  Content="Детальніше" Style="{StaticResource UsualButton}" Width="100" FontSize="15" Margin="0,0,0,20" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
            <TextBlock x:Name="Title" Text="Інформація про шлях" Style="{StaticResource Title Test}" TextWrapping="Wrap" Width="220" Height="40" Margin="0,20,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <TextBlock x:Name="GlobalInfo" TextWrapping="Wrap" FontSize="16" Width="200" VerticalAlignment="Center" Height="110" HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</Page>
