<Page x:Class="CourseWork.Pages.UserPart.Client"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CourseWork.Pages.UserPart"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Client">

    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0">
            <Button Click="DocumntsClick" Content="Документи" Width="120" Style="{StaticResource MiddleSizedButton}" Margin="0,5,0,0"/>
            <Button Click="AddTourClick" Content="Додати тур" Width="120" Style="{StaticResource MiddleSizedButton}" Margin="0,5,0,0"/>
            <Button Click="ToursClick" Content="Тури" Width="120" Style="{StaticResource MiddleSizedButton}" Margin="0,5,0,0"/>
        </StackPanel>
        <DataGrid x:Name="ClientTable" Height="300" Width="400" Visibility="Hidden"/>
        <Button x:Name="Back" Click="BackClick" Content="Назад" Visibility="Hidden" Style="{StaticResource MiddleSizedButton}" Margin="605,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
    </Grid>
</Page>
