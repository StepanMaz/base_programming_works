<Page x:Class="CourseWork.Pages.TourPart.TourConstituents"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CourseWork.Pages.TourPart"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Редагування даних турів">

    <Grid>
        <DataGrid x:Name="MainTable" HorizontalAlignment="Left" VerticalAlignment="Center" Width="500" Margin="50,0,0,0" Height="350"/>
        <ComboBox x:Name="CollectionComboBox" Style="{StaticResource DarkComboBox}" Width="150" Margin="0,100,50,0" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" SelectionChanged="SelectedTableChanged"/>
    </Grid>
</Page>
